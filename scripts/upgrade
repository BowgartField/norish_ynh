#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# STOP SYSTEMD SERVICES
#=================================================
ynh_script_progression "Stopping $app's systemd services..."

ynh_systemctl --service="$app" --action="stop"
ynh_systemctl --service="${app}-chromium" --action="stop"

#=================================================
# ENSURE DOWNWARD COMPATIBILITY
#=================================================
ynh_script_progression "Ensuring downward compatibility..."

# Generate master_key if not set (for upgrades from older versions)
ynh_app_setting_set_default --key=master_key --value="$(openssl rand -base64 32)"

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Upgrading source files..."

ynh_setup_source --dest_dir="$install_dir" --full_replace --keep=".env"

#=================================================
# CREATE DATA DIRECTORY
#=================================================

mkdir -p "$data_dir/uploads"
chown -R "$app:$app" "$data_dir"

#=================================================
# UPDATE A CONFIG FILE
#=================================================
ynh_script_progression "Updating $app's configuration files..."

ynh_config_add --template="norish.env" --destination="$install_dir/.env"

chmod 600 "$install_dir/.env"
chown "$app:$app" "$install_dir/.env"

#=================================================
# REAPPLY SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Upgrading system configurations related to $app..."

ynh_config_add_nginx

# Chromium headless service
ynh_config_add_systemd --service="${app}-chromium" --template="chromium.service"
yunohost service add "${app}-chromium" --description="Chromium Headless for Norish"

# Main app service
ynh_config_add_systemd
yunohost service add "$app" --description="Norish Recipe App" --log="/var/log/$app/$app.log"

ynh_config_add_logrotate

mkdir -p "/var/log/$app"
touch "/var/log/$app/$app.log"
chown -R "$app:$app" "/var/log/$app"

#=================================================
# BUILD APP
#=================================================
ynh_script_progression "Building app... This may take some time"

pushd "$install_dir"
    ynh_hide_warnings corepack enable
    ynh_hide_warnings npm install -g corepack@latest
    ynh_hide_warnings ynh_exec_as_app corepack prepare pnpm@latest --activate
    ynh_hide_warnings ynh_exec_as_app NODE_OPTIONS="--max-old-space-size=3000" pnpm install --frozen-lockfile
    ynh_hide_warnings ynh_exec_as_app NODE_OPTIONS="--max-old-space-size=3000" pnpm build

    # Clean up cache to save space (keep all dependencies as some devDependencies are needed at runtime)
    ynh_hide_warnings ynh_exec_as_app pnpm store prune
    ynh_safe_rm .next/cache
popd

chown -R "$app:$app" "$install_dir"

#=================================================
# START SYSTEMD SERVICES
#=================================================
ynh_script_progression "Starting $app's systemd services..."

ynh_systemctl --service="${app}-chromium" --action="start"
ynh_systemctl --service="$app" --action="start" --log_path="/var/log/$app/$app.log"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Upgrade of $app completed"
